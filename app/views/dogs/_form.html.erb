      <h2><%= pluralize(@dog.errors.count, "error") %> prohibited this dog from being saved:</h2>

      <ul>
      <% @dog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :breed_id %><br>
    <%= f.collection_select :breed_id, @breeds, :id, :breed_name, class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, @owners, :id, :last_comma_first, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :med_cond %><br>
    <%= f.text_field :med_cond, class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :vet %><br>
    <%= f.text_field :vet, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :dob %><br>
    <%= f.date_select :dob, :order => [:month, :day, :year], :start_year => Date.today.year - 16 %>
  </div>
  <div class="field">
   <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
